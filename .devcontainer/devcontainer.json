{
  "name": "voidwriter - Dev Container",
  // "build": {
  //   "dockerfile": "Dockerfile"
  // },
  "forwardPorts": [5173],
  "portsAttributes": {
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "cd writer && (npm ci || npm install) && npm run build:cli",
  // "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "firsttris.vscode-jest-runner",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  }
}
